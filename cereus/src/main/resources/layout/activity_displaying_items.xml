<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayingItemsActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/itemImageBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/green_dark"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/itemImage"
            app:layout_constraintTop_toTopOf="@id/itemImageBack"
            app:layout_constraintBottom_toBottomOf="@id/itemImageBack"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/green_light"/>
    <TextView
            android:text="Items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemText"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="@+id/itemImage"
            app:layout_constraintBottom_toBottomOf="@+id/itemImage"
            android:layout_marginStart="20dp"
            android:textSize="20sp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/itemName"
            android:hint="Item name here"
            app:layout_constraintTop_toTopOf="@id/itemImage"
            app:layout_constraintBottom_toBottomOf="@id/itemImage"
            app:layout_constraintRight_toLeftOf="@id/addItemButton"
            android:layout_marginEnd="10dp"/>
    <Button
            android:text="Create Item"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/addItemButton"
            app:layout_constraintRight_toRightOf="@+id/itemImage"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/itemImage"
            app:layout_constraintBottom_toBottomOf="@+id/itemImage"
            android:backgroundTint="@android:color/holo_red_dark"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/itemViewDisplayItem"
            app:layout_constraintTop_toBottomOf="@+id/itemImageBack"
            android:layout_margin="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButtonItem"
            app:layout_constraintLeft_toRightOf="@+id/addItemButton"
            android:layout_marginLeft="10dp" app:layout_constraintTop_toTopOf="@+id/itemName"
            android:backgroundTint="@color/design_default_color_error" android:textFontWeight="15"/>
</androidx.constraintlayout.widget.ConstraintLayout>