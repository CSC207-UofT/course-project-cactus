<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayingItemsActivity">
    <EditText
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/itemName"
            android:hint="Enter your item name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Add Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addItemButton" app:layout_constraintLeft_toRightOf="@+id/itemName"
            android:layout_marginLeft="20dp" app:layout_constraintTop_toTopOf="@+id/itemName"/>
    <ListView
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:id="@+id/itemViewDisplayItem" app:layout_constraintTop_toBottomOf="@+id/itemName"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/logoutButtonItem"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addItemButton" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintBottom_toTopOf="@+id/itemViewDisplayItem"/>
</androidx.constraintlayout.widget.ConstraintLayout>