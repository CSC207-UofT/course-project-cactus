<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddFriendActivity">
    <include layout="@layout/toolbar"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/itemImageBack"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/green_dark"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/itemImage"
            app:layout_constraintTop_toTopOf="@id/itemImageBack"
            app:layout_constraintBottom_toBottomOf="@id/itemImageBack"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/green_light"/>
    <TextView
            android:text="Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemText"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="@+id/itemImage"
            app:layout_constraintBottom_toBottomOf="@+id/itemImage"
            android:textSize="20sp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/friendUsername"
            android:hint="Friend username "
            app:layout_constraintTop_toTopOf="@id/itemImage"
            app:layout_constraintBottom_toBottomOf="@id/itemImage"
            app:layout_constraintRight_toLeftOf="@id/addButton"
            android:layout_marginRight="52dp" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Add Friend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/addButton"
            app:layout_constraintRight_toRightOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="@+id/itemImage"
            app:layout_constraintBottom_toBottomOf="@+id/itemImage"
            android:backgroundTint="@color/red"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:id="@+id/friendViewDisplayItem"
            app:layout_constraintTop_toBottomOf="@+id/itemImageBack"
            android:layout_margin="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>