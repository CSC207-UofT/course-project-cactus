<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreatingGroceryListActivity">

    <TextView
            android:text="Insert Template:"
            android:layout_width="240dp"
            android:layout_height="47dp" android:id="@+id/templateMessage"
            app:layout_constraintBottom_toTopOf="@+id/username"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/teal_700"
            app:layout_constraintHorizontal_bias="0.578" app:layout_constraintVertical_bias="0.488"
            android:layout_marginTop="212dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/groceryListName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.234"
            android:hint="Enter grocery list name"/>
    <Button
            android:text="Create Grocery List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addListNameButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groceryListName"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.744"/>
</androidx.constraintlayout.widget.ConstraintLayout>