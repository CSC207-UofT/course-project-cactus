<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayingListsActivity">
    <EditText
            android:layout_width="174dp"
            android:layout_height="45dp"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/listName"
            android:hint="List name here"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Add List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addListButton" app:layout_constraintLeft_toRightOf="@+id/listName"
            android:layout_marginLeft="10dp" app:layout_constraintTop_toTopOf="@+id/listName"/>
    <ListView
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:id="@+id/listViewDisplayList" app:layout_constraintTop_toBottomOf="@+id/listName"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButtonList"
            app:layout_constraintLeft_toRightOf="@+id/addListButton"
            android:layout_marginLeft="10dp" app:layout_constraintTop_toTopOf="@+id/listName"/>
</androidx.constraintlayout.widget.ConstraintLayout>