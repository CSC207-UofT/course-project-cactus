<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayingListsActivity">
    <Button
            android:text="logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButtonTemplate"
            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="321dp"/>
    <Button
            android:text="Add Template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addTemplateButton"
            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="178dp"/>
    <Button
            android:text="Default (blank list)"
            android:layout_width="403dp"
            android:layout_height="59dp"
            android:id="@+id/defaultTemplateButton"
            tools:layout_editor_absoluteY="59dp" tools:layout_editor_absoluteX="0dp"/>
    <EditText
            android:layout_width="174dp"
            android:layout_height="45dp"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/templateName"
            android:hint="Template name here"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ListView
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:id="@+id/templateViewDisplayTemplate" app:layout_constraintTop_toBottomOf="@+id/defaultTemplateButton"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>