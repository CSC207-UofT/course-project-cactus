<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfileActivity" android:id="@+id/userProfile">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/currentName"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="60dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/changedPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="560dp" android:hint="New Password"
    />
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeButton"
            app:layout_constraintStart_toEndOf="@+id/currentName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"
            app:layout_constraintHorizontal_bias="0.531"/>
    <Button
            android:text="Add Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addFriendButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206" tools:layout_editor_absoluteY="468dp"/>
    <Button
            android:text="logout"
            android:layout_width="101dp"
            android:layout_height="58dp" android:id="@+id/logoutButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addFriendButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.229"
            app:layout_constraintVertical_bias="0.213"/>
    <TextView
            android:text="Change Name /Username"
            android:layout_width="245dp"
            android:layout_height="26dp" android:id="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/currentName"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.615"
            android:background="#03A9F4"/>
    <TextView
            android:text="Options"
            android:layout_width="224dp"
            android:layout_height="28dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#009688"
            app:layout_constraintHorizontal_bias="0.021" tools:layout_editor_absoluteY="332dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>