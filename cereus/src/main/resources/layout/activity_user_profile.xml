<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfileActivity" android:id="@+id/userProfile">
    <include layout="@layout/toolbar"/>
    <TextView
            android:text="User Profile"
            android:layout_width="207dp"
            android:layout_height="37dp" android:id="@+id/textView"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginEnd="97dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="97dp" android:textSize="25sp" android:textAlignment="center"
            android:textColor="@color/teal_700"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/username_label"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" android:textColor="@color/teal_dark"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="32dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/username_text"
            android:background="@drawable/box_border" android:paddingLeft="5dp"
            android:paddingTop="3dp" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/username_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name_label"
            android:layout_marginTop="176dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textColor="@color/teal_dark"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="32dp"
            android:text="Name"
            android:ems="10"
            android:id="@+id/name_text"
            android:background="@drawable/box_border" android:paddingLeft="5dp"
            android:paddingTop="3dp" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/username_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:inputType="textPersonName"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/password_label"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textColor="@color/teal_dark"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="32dp"
            android:ems="10"
            android:id="@+id/password_text"
            android:background="@drawable/box_border" android:paddingLeft="5dp"
            android:paddingTop="3dp" android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/username_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:inputType="textPersonName"/>
    <Button
            android:text="Edit"
            android:layout_width="105dp"
            android:layout_height="38dp" android:id="@+id/edit_user_button"
            android:layout_marginTop="240dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="62dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/friends_button"
            android:layout_marginEnd="162dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="162dp"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/edit_user_button"/>
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/logout_button"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/friends_button" android:layout_marginEnd="162dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" android:backgroundTint="@color/red"/>
</androidx.constraintlayout.widget.ConstraintLayout>