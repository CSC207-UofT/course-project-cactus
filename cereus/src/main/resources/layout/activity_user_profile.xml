<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfileActivity" android:id="@+id/userProfile">
    <include layout="@layout/toolbar"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/changeImageBack"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/green_dark"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/changeImage"
            app:layout_constraintTop_toTopOf="@id/changeImageBack"
            app:layout_constraintBottom_toBottomOf="@id/changeImageBack"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/green_light"/>
    <TextView
            android:text="Change Name / Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changeText"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/changeImage"
            app:layout_constraintTop_toTopOf="@+id/changeImage"
            app:layout_constraintBottom_toBottomOf="@+id/changeImage"
            android:layout_marginStart="20dp"
            android:textSize="20sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/currentName"
            app:layout_constraintTop_toBottomOf="@id/changeImageBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:hint="New Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/changedPassword"
            app:layout_constraintTop_toBottomOf="@id/currentName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:hint="New Password"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changeButton"
            app:layout_constraintTop_toBottomOf="@id/changedPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/optionImageBack"
            app:layout_constraintTop_toBottomOf="@+id/changeButton"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:background="@color/blue_dark"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/optionImage"
            app:layout_constraintTop_toTopOf="@id/optionImageBack"
            app:layout_constraintBottom_toBottomOf="@id/optionImageBack"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/blue_light"/>
    <TextView
            android:text="Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionText"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/optionImage"
            app:layout_constraintTop_toTopOf="@+id/optionImage"
            app:layout_constraintBottom_toBottomOf="@+id/optionImage"
            android:layout_marginStart="20dp"
            android:textSize="20sp"/>
    <Button
            android:text="Add Friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addFriendButton"
            app:layout_constraintTop_toBottomOf="@+id/optionImageBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"/>
    <Button
            android:text="logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButton"
            app:layout_constraintTop_toBottomOf="@+id/addFriendButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>