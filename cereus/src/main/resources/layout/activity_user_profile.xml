<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfileActivity" android:id="@+id/userProfile">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/currentName"
            app:layout_constraintBottom_toTopOf="@+id/currentUsername"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.776"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/currentUsername"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="516dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/changedPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.08"
            android:layout_marginBottom="448dp" android:hint="New Password"
            app:layout_constraintTop_toBottomOf="@+id/currentUsername" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeNameButton"
            app:layout_constraintStart_toEndOf="@+id/currentName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"
            app:layout_constraintHorizontal_bias="0.531"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeUsernameButton"
            app:layout_constraintTop_toBottomOf="@+id/changeNameButton"
            android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/currentUsername" app:layout_constraintHorizontal_bias="0.531"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changePasswordButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="444dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>
    <Button
            android:text="Grocery Lists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/groceryListsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.17"
            tools:layout_editor_absoluteY="392dp"/>
    <Button
            android:text="Add Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addFriendButton"
            app:layout_constraintTop_toBottomOf="@+id/groceryListsButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.206"/>
    <Button
            android:text="logout"
            android:layout_width="101dp"
            android:layout_height="58dp" android:id="@+id/logoutButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addFriendButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.229"
            app:layout_constraintVertical_bias="0.213"/>
    <TextView
            android:text="Change Name /Username"
            android:layout_width="245dp"
            android:layout_height="26dp" android:id="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/currentName"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.8"
            android:background="#03A9F4"/>
    <TextView
            android:text="Options"
            android:layout_width="224dp"
            android:layout_height="28dp" android:id="@+id/textView3"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/groceryListsButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#009688"
            app:layout_constraintHorizontal_bias="0.021"/>
</androidx.constraintlayout.widget.ConstraintLayout>