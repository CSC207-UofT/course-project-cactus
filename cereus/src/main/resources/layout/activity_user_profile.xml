<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfileActivity" android:id="@+id/userProfile">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/currentName"
            app:layout_constraintBottom_toTopOf="@+id/currentUsername"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.776"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/currentUsername"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="516dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/currentPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintBottom_toTopOf="@+id/changedPassword" android:layout_marginBottom="20dp"
            android:hint="Current Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/changedPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.08"
            android:layout_marginBottom="312dp" android:hint="New Password"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeNameButton"
            app:layout_constraintStart_toEndOf="@+id/currentName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"
            app:layout_constraintHorizontal_bias="0.531"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeUsernameButton"
            app:layout_constraintTop_toBottomOf="@+id/changeNameButton"
            android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/currentUsername" app:layout_constraintHorizontal_bias="0.531"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changePasswordButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="372dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"/>
    <Button
            android:text="Grocery Lists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/groceryListsButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="516dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="Add Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addFriendButton"
            app:layout_constraintTop_toBottomOf="@+id/groceryListsButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/logoutButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addFriendButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Change Password"
            android:layout_width="217dp"
            android:layout_height="36dp" android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/currentPassword"
            android:layout_marginBottom="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.078"
            android:background="#2196F3"/>
    <TextView
            android:text="Change Name /Username"
            android:layout_width="212dp"
            android:layout_height="32dp" android:id="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/currentName"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08" app:layout_constraintVertical_bias="0.789"
            android:background="#03A9F4"/>
    <TextView
            android:text="Options"
            android:layout_width="224dp"
            android:layout_height="28dp" android:id="@+id/textView3"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/groceryListsButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#009688"/>
</androidx.constraintlayout.widget.ConstraintLayout>